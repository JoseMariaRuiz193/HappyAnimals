<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllAnimals">

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="21dp"
        android:contentDescription="ranaImg"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rana" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="19dp"
        android:contentDescription="gallinaImg"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/imageButton4"
        app:layout_constraintTop_toBottomOf="@+id/imageButton6"
        app:srcCompat="@drawable/gallina" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="19dp"
        android:contentDescription="galloImg"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/imageButton8"
        app:layout_constraintTop_toBottomOf="@+id/imageButton7"
        app:srcCompat="@drawable/gallo" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="11dp"
        android:contentDescription="gatoImg"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/imageButton8"
        app:srcCompat="@drawable/gato" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="11dp"
        android:contentDescription="ovejaImg"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/imageButton10"
        app:layout_constraintTop_toBottomOf="@+id/imageButton9"
        app:srcCompat="@drawable/oveja" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="21dp"
        android:contentDescription="perroImg"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/imageButton6"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/perro" />

    <ImageButton
        android:onClick="ranaActivity"
        android:id="@+id/imageButton4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="19dp"
        android:contentDescription="ranaImg"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:srcCompat="@drawable/rana"
        android:transitionName="fade2"
        />

    <ImageButton
        android:onClick="vacaActivity"
        android:id="@+id/imageButton5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="11dp"
        android:contentDescription="vacaImg"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4"
        app:srcCompat="@drawable/vaca"
        android:transitionName="fade3"
        />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="21dp"
        android:contentDescription="cerdoImg"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cerdook"
        android:transitionName="fade1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>