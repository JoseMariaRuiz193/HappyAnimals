<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllAnimals"
    >

    <ImageButton
        android:id="@+id/imageButtonVolver"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:contentDescription="volverBoton"
        android:onClick="returnVolver"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/returnvolver" />

    <ImageButton
        android:id="@+id/imageButtonGato"
        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="84dp"
        android:background="@android:color/transparent"
        android:contentDescription="gatoImg"
        android:scaleType="fitXY"
        android:transitionName="fade5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonPato"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gato" />

    <ImageButton
        android:id="@+id/imageButtonPerro"

        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:contentDescription="perroImg"
        android:scaleType="fitXY"
        android:transitionName="fade4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonVolver"
        app:srcCompat="@drawable/perro" />

    <ImageButton
        android:id="@+id/imageButtonOveja"

        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="43dp"
        android:background="@android:color/transparent"
        android:contentDescription="ovejaImg"
        android:scaleType="fitXY"
        android:transitionName="fade9"
        app:layout_constraintStart_toEndOf="@+id/imageButtonBurro"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonGallo"
        app:srcCompat="@drawable/oveja" />

    <ImageButton
        android:id="@+id/imageButtonPato"

        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="84dp"
        android:background="@android:color/transparent"
        android:contentDescription="patoImg"
        android:scaleType="fitXY"
        android:transitionName="fade6"
        app:layout_constraintStart_toEndOf="@+id/imageButtonPerro"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pato" />

    <ImageButton
        android:id="@+id/imageButtonVaca"

        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="43dp"
        android:background="@android:color/transparent"
        android:contentDescription="vacaImg"
        android:scaleType="fitXY"
        android:transitionName="fade3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonPerro"
        app:srcCompat="@drawable/vaca" />

    <ImageButton
        android:id="@+id/imageButtonBurro"

        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="43dp"
        android:background="@android:color/transparent"
        android:contentDescription="burroImg"
        android:scaleType="fitXY"
        android:transitionName="fade7"
        app:layout_constraintStart_toEndOf="@+id/imageButtonCerdo"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonGato"
        app:srcCompat="@drawable/burro640" />

    <ImageButton
        android:id="@+id/imageButtonGallo"

        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="84dp"
        android:background="@android:color/transparent"
        android:contentDescription="galloImg"
        android:scaleType="fitXY"
        android:transitionName="fade8"
        app:layout_constraintStart_toEndOf="@+id/imageButtonGato"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gallo" />

    <ImageButton
        android:id="@+id/imageButtonCerdo"
        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="43dp"
        android:background="@android:color/transparent"
        android:contentDescription="cerdoImg"
        android:scaleType="fitXY"
        android:transitionName="fade1"
        app:layout_constraintStart_toEndOf="@+id/imageButtonVaca"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonPato"
        app:srcCompat="@drawable/cerdo" />

</androidx.constraintlayout.widget.ConstraintLayout>