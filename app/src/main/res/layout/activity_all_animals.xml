        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        android:contentDescription="botongato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonGallo"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:layout_marginStart="560dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="botongallo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonPato"
        android:layout_width="120dp"
        android:layout_height="145dp"
        android:layout_marginStart="408dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        android:contentDescription="botonpato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/allanimalsteoria" />
</androidx.constraintlayout.widget.ConstraintLayout>