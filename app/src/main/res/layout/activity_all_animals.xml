<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllAnimals"
    >

    <ImageButton
        android:id="@+id/imageButtonOveja"
        android:layout_width="187dp"
        android:layout_height="150dp"
        android:layout_marginStart="528dp"
        android:layout_marginTop="244dp"
        android:background="@android:color/transparent"
        android:contentDescription="botonoveja"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:onClick="returnVolver"
        android:id="@+id/imageButtonBack"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginStart="615dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="botonback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/imageButtonCerdo"
        android:layout_width="145dp"
