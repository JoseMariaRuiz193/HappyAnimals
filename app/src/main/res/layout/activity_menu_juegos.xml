<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashhappyanimals"
    tools:context=".MenuJuegosActivity">

    <ImageButton
        android:id="@+id/imageButtonVolver"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:contentDescription="volverBoton"
        android:onClick="returnVolver"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/returnvolver"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="315dp"
        android:layout_height="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="90dp"
        android:contentDescription="memory Text"
        android:text="Memory Game"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="315dp"
        android:layout_height="34dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="34dp"
        android:contentDescription="memory Text"
        android:text="Numbers Game"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonMemory"
        android:layout_width="315dp"
        android:layout_height="255dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="120dp"
        android:contentDescription="juegomemoriaboton"
        android:onClick="onClickJuegoMemory"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/juegomemoria" />

    <ImageButton
        android:id="@+id/imageButtonNumeros"
        android:layout_width="315dp"
        android:layout_height="255dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="34dp"
        android:contentDescription="juegonumeros"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/juegonumeros" />
</androidx.constraintlayout.widget.ConstraintLayout>