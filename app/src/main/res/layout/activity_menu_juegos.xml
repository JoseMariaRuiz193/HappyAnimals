<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MenuJuegosActivity">

    <ImageButton
        android:id="@+id/imageButtonVolver"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_marginStart="604dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="volverBoton"
        android:onClick="returnVolver"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back"

        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/imageButtonMemory"
        android:layout_width="315dp"
        android:layout_height="225dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="148dp"
        android:background="@android:color/transparent"
        android:contentDescription="juegomemoriaboton"
        android:onClick="onClickJuegoMemory"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/memorygame" />

    <ImageButton
        android:id="@+id/imageButtonNumeros"
        android:layout_width="315dp"
        android:layout_height="295dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:contentDescription="juegonumeros"
        android:onClick="onClickJuegoImagenSonido"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/animalsounds" />
</androidx.constraintlayout.widget.ConstraintLayout>