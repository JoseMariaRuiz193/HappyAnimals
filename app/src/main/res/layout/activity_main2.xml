<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="248dp"
        android:layout_height="171dp"
        android:layout_marginEnd="100dp"
        android:contentDescription="vaca"
        android:onClick="onClickJuegoSonidos"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vaca" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView4"
        android:layout_width="248dp"
        android:layout_height="171dp"
        android:layout_marginStart="48dp"
        android:contentDescription="animales"
        android:onClick="onClickTeoriaSonidos"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aprender2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="248dp"
        android:layout_height="34dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="64dp"
        android:contentDescription="aprendeText"
        android:text="Aprende"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_p2"
        android:layout_width="248dp"
        android:layout_height="34dp"
        android:layout_marginStart="382dp"
        android:layout_marginTop="64dp"
        android:contentDescription="juegaText"
        android:text="Juega"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>