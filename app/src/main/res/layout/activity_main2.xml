<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/SplashScreenImage2"
        android:layout_width="778dp"
        android:layout_height="473dp"
        android:src="@drawable/splashhappyanimals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.702"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/learnButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="260dp"
        android:background="@android:color/transparent"
        android:contentDescription="learnplay"
        android:onClick="onClickTeoriaSonidos"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/learn" />

    <ImageButton
        android:id="@+id/playJuegosButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="260dp"
        android:background="@android:color/transparent"
        android:contentDescription="playbutton"
        android:onClick="onClickJuegoSonidos"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/learnButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/play" />
</androidx.constraintlayout.widget.ConstraintLayout>