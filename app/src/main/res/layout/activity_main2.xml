<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menuhappyanimals" />

    <Button
        android:onClick="onClickTeoriaSonidos"
        android:id="@+id/buttonLearn"
        android:layout_width="187dp"
        android:layout_height="48dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="230dp"
        android:background="@android:color/transparent"
        android:contentDescription="botonteoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="187dp"
        android:layout_height="48dp"
        android:layout_marginStart="460dp"
        android:layout_marginTop="230dp"
        android:background="@android:color/transparent"
        android:contentDescription="botonjuegos"
        android:onClick="onClickJuegoSonidos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>